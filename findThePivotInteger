class Solution {
    public int pivotInteger(int n) {
        if(n==1){
            return n;
        }
        int sum = 1;
        for(int i = 2;i < n;i++){
            sum+=i;
            if(sum==sumToN(i,n)){
                return i;
            }
        }
        return -1;

    }
    
    public int sumToN(int i, int n){
        int sum = 0;
        for(int value=i;value<=n;value++){
            sum+=value;
        }
        return sum;
    }
}
